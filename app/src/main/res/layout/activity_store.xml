<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/store_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/store_collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- parallax: 스크롤 시 접힘 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/store_top_vp"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:background="@color/cp_gray1"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/store_menu_img_indicator"
                    android:layout_width="42dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/home_event_indicator"
                    app:layout_constraintBottom_toTopOf="@+id/store_big_name_bg"
                    app:layout_constraintEnd_toEndOf="@+id/store_top_vp" />

                <LinearLayout
                    android:id="@+id/store_menu_img_indicator_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/store_menu_img_indicator"
                    app:layout_constraintEnd_toEndOf="@+id/store_menu_img_indicator"
                    app:layout_constraintStart_toStartOf="@+id/store_menu_img_indicator"
                    app:layout_constraintTop_toTopOf="@+id/store_menu_img_indicator">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_menu_imt_indicator_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:text="/"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_menu_imt_indicator_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/store_big_name_bg"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginHorizontal="25dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:elevation="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/store_space"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/store_top_vp"
                    app:layout_constraintVertical_bias="0.9">

                    <LinearLayout
                        android:id="@+id/store_big_name_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/store_big_name_bg"
                        app:layout_constraintEnd_toEndOf="@+id/store_big_name_bg"
                        app:layout_constraintStart_toStartOf="@+id/store_big_name_bg"
                        app:layout_constraintTop_toTopOf="@+id/store_big_name_bg">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/store_big_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="음식점 이름"
                            android:textColor="@color/black"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/store_cheetah"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_item_home_res_cheetah"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_home_list_rate"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/store_star_point"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.0"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="("
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/store_review_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=")"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="16dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_signup_terms_detail"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/store_space"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/store_top_vp" />


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/store_top_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabPaddingEnd="70dp"
                    app:tabBackground="@drawable/store_tab_unselected"
                    app:tabIndicatorColor="@color/cp_login_btn"
                    app:tabIndicatorHeight="3dp"
                    app:tabSelectedTextColor="@color/cp_login_btn"
                    app:tabTextColor="@color/black"
                    app:tabRippleColor="@color/cp_gray1"
                    app:tabTextAppearance="@style/tabTextSizeBold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/store_space">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="배달"/>

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포장"/>

                </com.google.android.material.tabs.TabLayout>

                <LinearLayout
                    android:id="@+id/store_delivery_tab_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintHorizontal_bias="0.27"
                    app:layout_constraintBottom_toBottomOf="@+id/store_top_tab_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/store_top_tab_layout"
                    app:layout_constraintTop_toBottomOf="@+id/store_space">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_delivery_tab_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_delivery_tab_slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_delivery_tab_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_delivery_tab_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/store_pack_tab_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintBottom_toBottomOf="@+id/store_top_tab_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/store_top_tab_layout"
                    app:layout_constraintTop_toBottomOf="@+id/store_space">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_pack_tab_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_pack_tab_slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_pack_tab_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/store_pack_tab_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <FrameLayout
                    android:id="@+id/store_frm"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/store_top_tab_layout" />

                <HorizontalScrollView
                    android:id="@+id/store_review_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/store_frm">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/store_review_item_1"
                            android:layout_width="280dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/store_review"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/store_review_img_1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@color/cp_gray1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/store_review_txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="리뷰"
                                android:textColor="@color/cp_gray5"
                                android:textSize="12sp"
                                android:textStyle="normal"
                                app:layout_constraintHorizontal_bias="0.01"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_review_img_1"
                                app:layout_constraintTop_toTopOf="parent" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:id="@+id/store_review_rating_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="10dp"
                                android:numStars="5"
                                android:rating="5"
                                android:progressTint="@color/cp_store_rating_stars"
                                android:progressBackgroundTint="@color/cp_gray3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_review_img_1" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/store_review_item_2"
                            android:layout_width="280dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/store_review"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/store_review_img_2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@color/cp_gray1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/store_review_txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="리뷰"
                                android:textColor="@color/cp_gray5"
                                android:textSize="12sp"
                                android:textStyle="normal"
                                app:layout_constraintHorizontal_bias="0.01"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_review_img_2"
                                app:layout_constraintTop_toTopOf="parent" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:id="@+id/store_review_rating_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="10dp"
                                android:numStars="5"
                                android:rating="5"
                                android:progressTint="@color/cp_store_rating_stars"
                                android:progressBackgroundTint="@color/cp_gray3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_review_img_2" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/store_review_item_3"
                            android:layout_width="280dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/store_review"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/store_review_img_3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@color/cp_gray1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/store_review_txt_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="리뷰"
                                android:textColor="@color/cp_gray5"
                                android:textSize="12sp"
                                android:textStyle="normal"
                                app:layout_constraintHorizontal_bias="0.01"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_review_img_3"
                                app:layout_constraintTop_toTopOf="parent" />

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:id="@+id/store_review_rating_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp"
                                android:layout_marginLeft="10dp"
                                android:numStars="5"
                                android:rating="5"
                                android:progressTint="@color/cp_store_rating_stars"
                                android:progressBackgroundTint="@color/cp_gray3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_review_img_3" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginRight="20dp"
                            android:paddingHorizontal="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/store_review">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/store_review_photo_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="포토 리뷰"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/store_review_photo_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="더보기"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/store_review_photo_1" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="18dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_signup_terms_detail"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/store_review_photo_2"
                                app:layout_constraintTop_toBottomOf="@+id/store_review_photo_1" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- pin: 스크롤 시 고정 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/store_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/store_toolbar_back"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_store_back"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/store_toolbar_share"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_store_share"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/menu_store_toolbar_favorite"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/menu_store_toolbar_favorite"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_store_favorite"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- 뷰페이저와 연결할 탭 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/store_toolbar_2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:layout_marginTop="24dp"
            android:fitsSystemWindows="true"
            android:visibility="gone"
            app:layout_collapseMode="pin">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/store_toolbar_back_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_store_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/store_toolbar_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="음식점 이름"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/store_toolbar_back_2"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/store_toolbar_share_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_store_share"
                app:layout_constraintBottom_toBottomOf="parent"
