        android:adjustViewBounds="true"
        android:src="@drawable/ic_signup_pwd_hint_2"
        android:tint="@color/cp_home_res_option_checked"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintTop_toTopOf="@+id/item_home_option_recommend_3"
        app:layout_constraintEnd_toEndOf="@+id/item_home_option_recommend_3"
        app:layout_constraintStart_toStartOf="@+id/item_home_option_recommend_3"
        app:layout_constraintBottom_toBottomOf="@+id/item_home_option_recommend_3" />

    <View
        android:id="@+id/item_home_option_recommend_line_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cp_gray1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_home_option_recommend_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_home_option_recommend_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
