<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cp_gray1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_action_bar"
        android:layout_width="match_parent" 
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/home_top_location_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_top_location"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_home_top_location" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_top_location_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:text="현재위치"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_home_top_location_detail"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_top_search"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_home_top_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/home_top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cp_gray1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_action_bar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_top_line">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_top_banner_vp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/cp_gray1"
                app:isInfinite="true"
                app:autoScroll="true"
                app:scrollInterval="5000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/home_top_banner_indicator"
                android:layout_width="45dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/home_banner_indicator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/home_top_banner_indicator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/home_top_banner_indicator"
                app:layout_constraintEnd_toEndOf="@+id/home_top_banner_indicator"
                app:layout_constraintStart_toStartOf="@+id/home_top_banner_indicator"
                app:layout_constraintTop_toTopOf="@+id/home_top_banner_indicator">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_top_banner_indicator_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_top_banner_indicator_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_top_banner_all_event"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/home_banner_indicator"
                android:gravity="center"
                android:text="@string/home_top_banner_all_event"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_top_banner_vp"
                app:layout_constraintEnd_toEndOf="@+id/home_top_banner_vp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_category_scroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_top_banner_vp" />

            <View
                android:id="@+id/home_mid_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/cp_gray1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_category_scroll" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_horizontal_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:paddingBottom="12dp"
                android:paddingHorizontal="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_category_scroll">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_horizontal_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="리스트 이름"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_horizontal_list_detail"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_home_list_detail"
                    app:layout_constraintBottom_toBottomOf="@+id/home_horizontal_list_title"
                    app:layout_constraintEnd_toEndOf="@+id/home_horizontal_list_title"
                    app:layout_constraintTop_toTopOf="@+id/home_horizontal_list_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_horizontal_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_horizontal_list_layout" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/home_mid_banner_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/cp_gray1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_horizontal_list" />

            <View
                android:id="@+id/home_mid_banner_indicator"
                android:layout_width="45dp"
                android:layout_height="22dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/home_banner_indicator"
                app:layout_constraintBottom_toBottomOf="@+id/home_mid_banner_vp"
                app:layout_constraintEnd_toEndOf="@+id/home_mid_banner_vp" />

            <LinearLayout
                android:id="@+id/home_mid_banner_indicator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/home_mid_banner_indicator"
                app:layout_constraintEnd_toEndOf="@+id/home_mid_banner_indicator"
                app:layout_constraintStart_toStartOf="@+id/home_mid_banner_indicator"
                app:layout_constraintTop_toTopOf="@+id/home_mid_banner_indicator">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_mid_banner_indicator_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_mid_banner_indicator_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/home_res_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:text="@string/home_res_title"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_mid_banner_vp" />

            <HorizontalScrollView
                android:id="@+id/home_res_option_scroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:background="@color/white"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_res_title">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_res_option_all_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@color/cp_gray6"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_signup_terms_detail_resize"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="5dp"
                        android:text="@string/home_res_option_all_menu"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/cp_gray6"
                        android:layout_marginHorizontal="5dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_res_option_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:background="@drawable/home_chip"
                        android:drawableRight="@drawable/ic_home_option_detail_resize"
                        android:drawablePadding="4dp"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="10dp"
                        android:text="@string/home_res_option_1"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_res_option_cheetah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:background="@drawable/home_chip"
                        android:drawableLeft="@drawable/ic_home_option_cheetah_resize"
                        android:drawablePadding="4dp"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="13dp"
                        android:text="@string/home_res_option_2"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_res_option_delivery_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/home_chip"
                        android:drawableRight="@drawable/ic_home_option_detail_resize"
                        android:drawablePadding="4dp"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="10dp"
                        android:text="@string/home_res_option_3"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_res_option_min_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:background="@drawable/home_chip"
                        android:drawableRight="@drawable/ic_home_option_detail_resize"
                        android:drawablePadding="4dp"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="13dp"
                        android:text="@string/home_res_option_4"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_res_option_pack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/home_chip"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="13dp"
                        android:text="@string/home_res_option_5"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_res_option_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:background="@drawable/home_chip"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="13dp"
                        android:text="@string/home_res_option_6"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/black" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/home_res_option_drink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/home_chip"
                        android:layout_marginRight="15dp"
                        android:paddingVertical="7dp"
                        android:paddingHorizontal="13dp"
                        android:text="@string/home_res_option_7"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="@color/black" />

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_res_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_res_option_scroll" />

            <TextView
                android:id="@+id/home_btm_recommend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/home_btm_recommend_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="15dp"
                android:paddingHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@+id/home_res_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_btm_recommend_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/home_btm_recommend_sub_title"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:paddingTop="5dp"
                android:paddingHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@+id/home_btm_recommend_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_btm_recommend_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:paddingTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_btm_recommend_sub_title">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_btm_recommend_1_img"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_home_btm_recommend_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_btm_recommend_1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/home_btm_recommend_1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/home_btm_recommend_1_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_btm_recommend_1_detail"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_signup_terms_detail"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_btm_recommend_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:paddingTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_btm_recommend_1">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_btm_recommend_2_img"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_home_btm_recommend_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_btm_recommend_2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/home_btm_recommend_2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/home_btm_recommend_2_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_btm_recommend_2_detail"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_signup_terms_detail"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_btm_recommend_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:paddingTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_btm_recommend_2">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_btm_recommend_3_img"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_home_btm_recommend_3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_btm_recommend_3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/home_btm_recommend_3"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/home_btm_recommend_3_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/home_btm_recommend_3_detail"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_signup_terms_detail"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_btm_recommend_space"
                android:layout_width="match_parent"
