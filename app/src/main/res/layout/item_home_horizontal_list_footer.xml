<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="40dp"
    android:layout_marginHorizontal="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_home_horizontal_list_footer_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/item_home_horizontal_list_footer"
        android:elevation="4dp"
        android:padding="5dp"
        android:src="@drawable/ic_home_list_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_home_horizontal_list_footer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/item_home_horizontal_list_footer_txt"
        android:textColor="@color/cp_gray5"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_home_horizontal_list_footer_btn" />





</androidx.constraintlayout.widget.ConstraintLayout>