<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Coupangeats" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cp_login_false_hint</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textSelectHandle">@color/cp_login_btn</item>
        <item name="android:textColorHighlight">@color/cp_highlight</item>
    </style>

    <style name="StatusBarColor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Ripple">
        <item name="android:colorControlHighlight">@color/cp_login_false_hint</item>
    </style>

    <style name="SignupEditText">
        <item name="android:textSelectHandle">@color/cp_login_btn</item>
        <item name="android:textColorHighlight">@color/cp_highlight</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>

</resources>